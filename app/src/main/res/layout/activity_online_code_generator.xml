<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnlineCodeGeneratorActivity">

    <TextView
        android:id="@+id/idTVHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:padding="10sp"
        android:text="Jogo da Velha"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/idEdtCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTVHead"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="38dp"
        android:hint="Informe o cÃ³digo"/>
    
    <Button
        android:id="@+id/idBtnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEdtCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Criar"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/idBtnJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idBtnCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Entrar"
        android:textAllCaps="false"/>

    <ProgressBar
        android:id="@+id/idPBLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>